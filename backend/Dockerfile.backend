# Use an official Python runtime (Python 3.11)
FROM python:3.11-slim

# Install git and update-alternatives to make python3.11 the default python
RUN apt-get update && apt-get install -y git \
    && update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1

# Set the working directory in the container
WORKDIR /app

# Copy the backend code into the container
COPY . /app

# Install the backend dependencies from requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Install additional dependencies
RUN pip install git+https://github.com/MIDORIBIN/langchain-gpt4free.git
RUN pip install -U langchain-community

# Expose port 5000 for the backend service
EXPOSE 5000

# Run the backend using python main.py from /app directory
CMD ["python", "main.py"]